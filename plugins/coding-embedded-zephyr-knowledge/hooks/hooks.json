{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/block-dangerous-commands.sh",
            "description": "Block dangerous shell commands that could damage the project or hardware"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check-environment.sh",
            "description": "Verify Zephyr development environment is properly configured"
          }
        ]
      }
    ]
  }
}
